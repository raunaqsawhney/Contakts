<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupDetailActivity" >

   
    
    <ListView
        android:id="@+id/contactGroupList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:divider="@drawable/custom_divider"
        android:dividerHeight="0.10dp"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:scrollingCache="true"
        android:soundEffectsEnabled="true"
        android:paddingBottom="40dip" />
    
    <LinearLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dip">
        
        <TextView 
			android:id="@+id/emptyGroupHeader"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:fontFamily="sans-serif-condensed"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:textSize="22sp"
	        android:textColor="#8E8E93"
	        android:text="@string/emptyGroups"/>
        
        <TextView 
	        android:id="@+id/emptyGroupInfo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:fontFamily="sans-serif-condensed"
	        android:layout_gravity="center_vertical"
	        android:gravity="center"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginTop="20dip"
	        android:textSize="14sp"
	        android:text="@string/emptyGroupInfo"
	        android:textColor="#8E8E93" />
        
    </LinearLayout>
    
</LinearLayout>
