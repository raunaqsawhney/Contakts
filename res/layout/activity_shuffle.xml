<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/shuffle_header_bg"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:scaleType="centerCrop"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
           
			<LinearLayout
	        	android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:paddingLeft="20dip"
		        android:paddingRight="20dip"
		        android:paddingTop="30dip"
		        android:paddingBottom="30dip" >
        
		        <com.raunaqsawhney.contakts.MLRoundedImageView
			        android:id="@+id/shuffle_photo"
			        android:layout_width="90dip"
			        android:layout_height="90dip"/>
    
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="vertical">
	            
		            <TextView
				        android:id="@+id/shuffle_name"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textAlignment="gravity"
				        android:gravity="left"
				        android:fontFamily="sans-serif-thin"
				        android:textSize="26sp"
				        android:textColor="#FFF"
				        android:layout_marginLeft="20dip"/>
		            
		            <TextView
			            android:id="@+id/shuffle_company"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="#FFF"
			            android:textAlignment="gravity"
				        android:gravity="left"
				        android:fontFamily="sans-serif-thin"
			            android:layout_marginLeft="18sp"
			            android:textSize="16sp"/>
	    
		            <!-- 
		            <Button
		                android:id="@+id/shuffleProfileBtn"
		                android:layout_width="match_parent"
		                android:layout_height="35dip"
		                android:text="@string/shuffleProfile"
		                android:fontFamily="sans-serif-light"
		                android:textColor="#FFF"
		                android:textSize="14sp"
		                android:layout_marginLeft="20dip"
		                android:layout_marginTop="10dip"/>
		             -->
	            
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</FrameLayout>
	
    <TextView
        android:id="@+id/shuffleHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:fontFamily="sans-serif-thin"
        android:textSize="26sp"
        android:paddingTop="15dip"
        android:paddingLeft="20dip"
        android:text="@string/sayHello"/>
    
	<LinearLayout
        android:id="@+id/quickContactBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dip">
        
        <ImageView
            android:id="@+id/shufflePhonePhoto"
            android:layout_weight="0.25"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/ic_shuffle_phone"/>
        
		<ImageView
            android:id="@+id/shuffleSMSPhoto"
            android:layout_weight="0.25"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/ic_shuffle_sms"/>
		
		<ImageView
            android:id="@+id/shuffleEmailPhoto"
            android:layout_weight="0.25"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/ic_shuffle_email"/>

		<ImageView
            android:id="@+id/shuffleProfilePhoto"
            android:layout_weight="0.25"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/ic_profile"/>
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dip"
            android:paddingBottom="50dip">
            
            <TextView 
		            android:id="@+id/shuffle_ls_contacted_header"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/shuffle_ls_contacted"
		            android:textColor="#33B5E5"
		            android:fontFamily="sans-serif-condensed"
		            android:textSize="20sp"
		            android:layout_marginLeft="20dip" />
            
  			<TextView 
		            android:id="@+id/shuffle_ls_contacted"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:textColor="#4A4A4A"
		            android:textSize="18sp"
		            android:fontFamily="sans-serif-light"
		            android:layout_marginLeft="20dip"
		            android:layout_marginRight="20dip" />
  			
			<TextView 
		            android:id="@+id/shuffle_tc_contacted_header"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/shuffle_tc_contacted"
		            android:textColor="#33B5E5"
		            android:fontFamily="sans-serif-condensed"
		            android:textSize="20sp"
		            android:paddingTop="15dip"
		            android:layout_marginLeft="20dip" />
            
			<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    
			    <TextView 
		            android:id="@+id/shuffle_tc_contacted"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:textColor="#4A4A4A"
		            android:gravity="center_vertical"
		            android:textSize="32sp"
		            android:fontFamily="sans-serif-thin"
		            android:layout_marginLeft="20dip" />
			    
				<TextView 
		            android:id="@+id/shuffle_tc_contacted_descr"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:textColor="#4A4A4A"
		            android:textSize="18sp"
		            android:gravity="center_vertical"
		            android:fontFamily="sans-serif-light"
		            android:layout_marginLeft="20dip"
		            android:layout_marginRight="20dip" />
			    
			</LinearLayout>
  			

			<TextView 
	            android:id="@+id/quote"
	            android:paddingTop="30dip"
	            android:paddingRight="20dip"
	            android:paddingLeft="20dip"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="12sp"
	            android:textColor="#8E8E93"
	            android:layout_gravity="center"/>
			
        </LinearLayout>

    </ScrollView>
    
</LinearLayout>
